<body class="inner-page page-write">
  <div class="main-wrap">
    {{> figment/navbar}}
    <div class="row">
      <h1 class="center homeText">Figment.Observer</h1>
    </div>
    <div class="container">
      <div class="card write-card">
        <div class="card-content">
          <span class="card-title">This is your moment, {{user.firstname}}.</span>
          <form id="storyForm" class="story-form" data-userId="{{user.id}}">
            <div class="row">
              <div class="input-field col s12">
                <input id="storyTitle" type="text" class="validate ">
                <label for="storyTitle">Story Title</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="storyDescription" type="text" class="validate " data-length="240">
                <label for="storyDescription">Description</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <select id="genreChoices">
                  <option value="" disabled selected>Select a Genre</option>
                  <option value="Humor">Humor</option>
                  <option value="Mystery">Mystery</option>
                  <option value="Romance">Romance</option>
                  <option value="Sci-Fi">Sci-Fi</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="storyBody" class="materialize-textarea" data-length="2000"></textarea>
                <label for="storyBody">The Story</label>
              </div>
            </div>
            <div class="card-action">
              {{!-- <input id="submit" type="submit" value="Submit" class="btn-small waves-effect white"> --}}

              <button id="submit" type="submit" value="Submit" class="btn waves-effect light-blue darken-3" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{> figment/scripts}}
  <script src="/js/write.js" type="text/javascript"></script> 
</body>