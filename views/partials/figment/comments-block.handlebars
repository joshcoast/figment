<li class="collection-item">
	<span class="title-burger-name">{{burger_name}}</span>
  <div class="row-controls">
    <a class="change-devoured waves-effect waves-light btn" data-id="{{id}}" data-newdevoured="{{devoured}}">
      {{#if devoured}}
        <i class="material-icons right">local_dining</i> Eat Me
      {{else}}
        <i class="material-icons right">note_add</i> Order Another
      {{/if}}
    </a>
    <a class="delete-burger waves-effect waves-light btn" data-id="{{this.id}}"> 
      <i class="material-icons right">delete_forever</i> Toss it!
    </a>
  </div>
</li>
