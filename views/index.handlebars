<div class="container story">

  <div class="row">

    <div class="col-2">
      <button id="btn-home-view" class="btn btn-primary">Home</button>
    </div>

    <div class="col-2">
      <button class="btn btn-primary" href="/cms">New Story</button>
    </div>

    <div class="col-2">
      <button class="btn btn-primary" href="/authors">Manage Authors</button>
    </div>

    <div class="col-2">
      <button id="loginBtn" class="btn btn-primary">Log In</button>
    </div>

    <div class="col-2">
      <button id="logoutBtn" class="btn btn-primary">Log Out</button>
    </div>

  </div>

  <div class="row">
    <div class="container">
      <h4></h4>
    </div>
  </div>
  
</div>

<div class="row">
  <div class="col-md-12 story-container">
    <ul class="list-group">
      {{#each story}}
      <li class="list-group-item">
        <p>{{this.id}}.
          <strong>{{this.title}}</strong>
        </p>
        <p>{{this.body}}</p>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

</div>

