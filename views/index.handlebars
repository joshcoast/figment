<div class="container story">
  <div class="row">
    <div class="col-md-2 col-sm-2">
      <div class="col s2">
        <button id="btn-home-view" class="btn btn-primary btn-margin">Home</button>
      </div>
      <a class="btn btn-light" href="/cms">New Story</a>
    </div>
    <div class="col-md-2 col-sm-2">
      <a class="btn btn-light" href="/authors">Manage Authors</a>
    </div>
    <div class="col s2">
      <button id="loginBtn" class="btn btn-primary btn-margin">Log In</button>
    </div>
    <div class="col s2">
      <button id="logoutBtn" class="btn btn-primary btn-margin">Log Out</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 story-container">
      <ul class="list-group">
        {{#each story}}
        <li class="list-group-item">
          <p>{{this.id}}.
            <strong>{{this.title}}</strong>
          </p>
          <p>{{this.body}}</p>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<!-- Custom Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js" type="text/javascript"></script>
<script src="../public/js/story-index.js" type="text/javascript"></script>
<script src="../public/js/app.js" type="text/javascript"></script>