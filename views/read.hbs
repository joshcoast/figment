<div class="container story">
  <div class="row">
    <div class="col s3">
      <button id="btn-home-view" class="transparent btn-small" href="/choice">Home</button>
    </div>
    <a class="transparent btn-small" href="/cms">New Story</a>
    <div class="col s3">
      <button class="transparent btn-small" href="/authors">Manage Authors</button>
    </div>
    <div class="col s3">
      <button id="loginBtn" class="transparent btn-small" href="/login">Log In</button>
    </div>
    <div class="col s3">
      <button id="logoutBtn" class="transparent btn-small" href="/logout">Log Out</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 story-container">
      <ul class="list-group">
        {{#each story}}
        <li class="list-group-item">
          <p>{{this.id}}.
            <strong>{{this.title}}</strong>
          </p>
          <p>{{this.body}}</p>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

